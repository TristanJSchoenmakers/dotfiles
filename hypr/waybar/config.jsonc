// -*- mode: jsonc -*-
// https://github.com/Alexays/Waybar/wiki/Module:-Hyprland
{
  // "layer": "bottom", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  // "modules-left": [
  //   "hyprland/window"
  //   // "custom/media"
  // ],
  "modules-center": [
    "hyprland/submap",
    "hyprland/workspaces"
  ],
  "modules-right": [
    "custom/bluetooth-gui",
    "pulseaudio",
    "clock"
    // "tray"
  ],
  // Modules configuration
  "hyprland/window": {
    "format": "<span foreground=\"#A7C080\"> Ôãê  </span> {}",
    "max-length": 100
  },
  "hyprland/workspaces": {
    "format": "<sub>{icon}</sub>",
    // "format-icons": {
    //   "active": "ÔÑë"
    // },
    "format-active": "[{icon}]"
    // "format-window-separator": "\n",
    //    "window-rewrite-default": "ÔÅô",
    //    "window-rewrite": {
    //      "title<.*youtube.*>": "ÔÖ™", // Windows whose titles contain "youtube"
    //      "class<firefox>": "Ôâ©", // Windows whose classes are "firefox"
    //      "class<firefox> title<.*github.*>": "ÔÑì", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
    //      "foot": "Óûï", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
    //      "code": "Û∞®û"
    //    }
  },
  "hyprland/submap": {
    "format": "{}",
    "max-length": 12,
    "tooltip": false
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    "format": "{:%H:%M %d-%m-%Y}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "custom/bluetooth-gui": {
    "format": "Ôäî",
    "on-click": "blueman-manager"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}%",
    "format-muted": "0%",
    "format-bluetooth": "{volume}%",
    "format-bluetooth-muted": "0%",
    "format-icons": {
      // "headphone": "ÔÄ•",
      // "hands-free": "Ôñê",
      // "headset": "Ôñê",
      // "phone": "ÔÇï",
      // "portable": "ÔÇï",
      // "car": "ÔÜπ",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  }
}